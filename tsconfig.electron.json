{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist/electron",
        "target": "ES2020",
        "module": "commonjs",
        "lib": ["ES2020", "dom"],
        "types": ["node", "electron"],
        "moduleResolution": "node",
        "sourceMap": true,
        "noEmitOnError": true
    },
    "include": [
        "electron/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
  